<% include partials/header.ejs %>

<div class="ui main text container segment">
	<div class ="ui huge header">Edit Blog Post</div>
	<form class="ui form" action="/blogs/<%=blog._id%>?_method=PUT" method="POST">
		<div class="field">
			<label>Title</label>
			<input type="text" name="blog[title]" placeholder="Blog Title" value="<%=blog.title%>">
		</div>
		<div class="field">
			<label>Image</label>
			<input type="text" name="blog[image]" placeholder="Blog Image" value="<%=blog.image%>">
		</div>
		<div class="field">
			<label>Blog Content</label>
			<textarea name="blog[body]" placeholder="Blog Body"><%=blog.body%></textarea>
		</div>
		<input class="ui blue basic button" type="Submit">
	</form>
</div>


<% include partials/footer.ejs %>