<% include partials/header.ejs %>

<div class="ui main text container">
	<div class="ui huge header">
		RESTFUL BLOG APP
	</div>
	<div class='ui top attached segment'>
		<div class="ui divided items">
			<% blogs.forEach(blog=>{ %>
				<div class="item">
					<div class="image">
						<img src="<%=blog.image%>" />
					</div>
					<div class="content">
						<a class="header" href="blogs/<%=blog._id%>"><%=blog.title%></a>
					<div class="meta">
						<span class="cinema"><%=blog.created.toDateString()%> </span>
					</div>
					<div class="description">
						<p><%-blog.body.substring(0, 60)%></p>
					</div>
					<div class="extra">
						<a class="ui floated basic blue button" href="blogs/<%=blog._id%>">Read Me</a>
						<a class="ui floated basic green button" href="blogs/<%=blog._id%>/edit">Edit Me</a>
					</div>
				</div>
				</div>
			<%});%>
		</div>
	</div>
</div>




