<% include ../partials/header %>


<div class="addCampForm">
	<div class="row">
		<h2 style="text-align: center">Add Campground </h2>
		<div class="formForNew">
			<form action="/campgrounds" method="POST">
				<div class="form-group">
					<input class="form-control"	type="text" name="campName" placeholder="CampGround Name" />
				</div>
				<div class="form-group">
					<input class="form-control"	type="text" name="imageLink" placeholder="Image Link" />
				</div>
				<div class="form-group">
					<input class="form-control"	type="number" name="price" placeholder="price" min="0.01" step="0.01" />
				</div>
				<div class="form-group">
					<input class="form-control"	type="text" name="campDescription" placeholder="Camp Description" />
				</div>
				<div class="form-group">
					<input class="btn btn-lg btn-primary btn-block" type="submit">
				</div>
			</form>
			<a href="/campgrounds">Go Back </a>
		</div>
	</div>
</div>


<% include ../partials/footer %>