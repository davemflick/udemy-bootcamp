<% include ../partials/header %>

<header class="jumbotron CGPageTitle container">
	<h1 class="titleH1">Campgrounds page</h1>
	<p>View our hand-picked campgrounds from nowhere</p>
	<p>
	<a class="addCGLink btn btn-primary btn-lg" href="/campgrounds/new">Add Campground Form </a>
	</p>
</header>

<div class="row">
	<div class="col-xs-12">
		<h2 class="mostPopTit">Our Most Popular Campgrounds </h2>
	</div>
</div>
<div class="campgroundsContainer row">
	<%campgrounds.forEach(campground=>{ %>
		<div class="singleCampground col-sm-6 col-md-3">
			<div class="thumbnail">
				<img class="cgImg img-fluid" src="<%=campground.image%>" />
				<div class="caption">
					<h4><%=campground.name%></h4>
				</div>
				<p>
					<a href="/campgrounds/<%= campground.id%>" class="btn btn-primary" >More Info </a>
				</p>
				<p><em> Posted by <%= campground.author.username%> </em> </p>
			</div>
		</div>
	<% }); %>
</div>



<% include ../partials/footer %>